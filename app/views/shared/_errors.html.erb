<% if obj.errors.any? %>
  <div class="container">
    <div class="row error">
      <div class="col-12">
        <div class="card bg-light text-red">
          <div class="card-header">
            <h4>
              <%= pluralize(obj.errors.count, "error") %>
              prohibited this from behing saved:
            </h4>
          </div>
          <div class="card-body">
            <% obj.errors.full_messages.each do |msg| %>
              <ul>
                <li><%= msg %></li>
              </ul>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
